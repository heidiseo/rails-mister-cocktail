<div class="box text-center bg-white mt-5">
<%= simple_form_for(@cocktail) do |f| %>
  <h1>Add a new cocktail!</h1>
  <%= f.input :name %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Add", class: "btn btn-primary" %>
  <%= link_to "Back to all cocktails", cocktails_path, class: "btn btn-warning" %>
<% end %>
</div>

