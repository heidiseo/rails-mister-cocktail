

<div class="box text-center bg-white mt-5">
  <div class="d-flex">
      <%= cl_image_tag @cocktail.photo, class:"card-individual"%>
      <div class="card-content text-left">
        <h1 class="text-info"><%= @cocktail.name %></h1>
        <h3>Ingredients</h3>
        <ul class="mt-5 list-group">
          <% @cocktail.doses.each do |dose| %>
            <div class="d-flex align-items-center">
                <li class="list list-group-item"><%= dose.description %> <%= dose.ingredient.name %></li>
                <p class="m-0 ml-3"><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="far fa-trash-alt trash"></i>
                  <% end %>
                </p>
            </div>
          <% end %>
        </ul>
        <div class="button text-center">
          <%= link_to "Add doses", new_cocktail_dose_path(@cocktail), class: "btn btn-success text-center" %>
          <%= link_to "Back to all cocktails", cocktails_path, class: "btn btn-primary text-center"%>
        </div>
      </div>
    </div>
  </div>
</div>
