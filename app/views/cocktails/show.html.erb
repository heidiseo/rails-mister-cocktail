

<div class="container text-center">
  <h1><%= @cocktail.name %></h1>

  <h3>Ingredients</h3>
  <ul class="mt-5 list-group">
    <% @cocktail.doses.each do |dose| %>
      <div class="d-flex align-items-center">
        <div class="row">
          <li class="list list-group-item"><%= dose.description %> <%= dose.ingredient.name %></li>
          <p class="ml-3"><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="far fa-trash-alt trash"></i>
            <% end %>
          </p>
        </div>
      </div>
    <% end %>
  </ul>

  <%= link_to "Add doses", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>
  <%= link_to "Back to all cocktails", cocktails_path, class: "btn btn-primary"%>
</div>
