<div class="banner">
  <div class="container">
    <h1 class="banner-title">Make your favourite cocktails at home!</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-12 col-md-4 mt-5">
        <%= link_to cocktail_path(cocktail) do %></p>
        <div class="card">
          <img class="card-img-top" src="https://images.unsplash.com/photo-1486947799489-3fabdd7d32a6?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=975&q=80", class="card-img-top" alt="cocktail" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title text-center"><%= cocktail.name %></h5>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <p class="text-center p-3
   "><%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-success" %></p>

</div>

